<%- partial('../header') %>
    
<div style="padding: 30px 30px;">
<h3>Manage Department</h3>
	<table class="table table-striped table-bordered">
	<thead>
		<tr><td>Name</td><td>Options</td></tr>
	</thead>
	<tbody>
		<% for(var i=0; i<departments.length; i++) { %>
		
			<tr><td width="70%"><%= departments[i].name %></td>
				<td>
					<a href="/departments/<%=departments[i].id %>/flightplans" class="btn btn-default">View All Plans</a>
					<a href="/flightplan/view?id=<%=departments[i].flightplan %>" class="btn btn-default">Edit Current Plan</a>
					<a href="/flightplan/add?did=<%= departments[i].id %>" class="btn btn-default">Add New Plan</a> 
				</td></tr>
		
		<% } %> 
	</tbody> 
	</table>
</div>
  
  
  
<!-- Latest compiled and minified JavaScript -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

